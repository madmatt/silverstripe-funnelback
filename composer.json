{
    "name": "madmatt/silverstripe-funnelback",
    "description": "Provides an interface to search a Funnelback collection",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",

    "require": {
        "php": "^8",
        "guzzlehttp/guzzle": "^7.4",
        "silverstripe/framework": "^4.10 || ^5"
    },

    "require-dev": {
        "phpunit/phpunit": "^9"
    },

    "autoload": {
        "psr-4": {
            "Madmatt\\Funnelback\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Madmatt\\Funnelback\\Tests\\": "tests/"
        }
    },

    "authors": [
        {
            "name": "madmatt",
            "email": "signups@madman.net.nz"
        }
    ],

    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
